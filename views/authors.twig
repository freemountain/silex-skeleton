<!DOCTYPE html>
<html lang="en">
{% include 'htmlHead.twig' with {'title' : 'Authors' } %}
<body>
  {% include 'modal.twig' %}
  {% include 'navbar.twig' with {'active' : 'authors' } %}
  <div class="container">
    <table class="table header-fixed sticky-header">
      <thead>
        <tr>
          <th>#</th>
          <th>First Name</th>
          <th>Last Name</th>
        </tr>
      </thead>
      <tbody>
        {% for item in authors %}
        <tr>
          <th scope="row">{{ item.Id }}</th>
          <td>{{ item.FirstName }}</td>
          <td>{{ item.LastName }}</td>
          <td><a href="#" onclick="onDelete('author', {{item.Id}});">delete</a></td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
  <nav class="navbar navbar-fixed-bottom navbar-light bg-faded">
    <form id="addForm" action="/api/authors/" title="" method="post" class="form-inline navbar-form">
      <div class="form-group">
        <label class="title">First Name:</label>
        <input class="form-control" type="text" id="firstName" name="firstName">
      </div>
      <div class="form-group">
        <label class="title">Last Name:</label>
        <input class="form-control" type="text" id="lastName" name="lastName">
      </div>
      <div class="form-group">
        <input class="form-control" type="submit" id="submitButton" name="submitButton" value="Add" class="btn btn-success">
      </div>
    </form>
  </nav>
</body>
</html>
